<!-- Put site-specific property overrides in this file. -->

<configuration>
<property>
	<!-- SecondaryNamenode网络地址 -->
	<name>dfs.namenode.secondary.http-address</name>
	<value>172.168.1.98:9001</value>
</property>
<property>
	<!-- NameNode工作目录，须预先存在 -->
	<name>dfs.namenode.name.dir</name>
	<value>file:/wukong/data/hadoop-2.4.1/dfs_namenode_name_dir</value>
</property>
<property>
	<!-- DataNode工作目录 -->
	<name>dfs.datanode.data.dir</name>
	<value>file:/wukong/data/hadoop-2.4.1/dfs_datanode_data_dir</value>
</property>
<property>
	<!-- 文件（副本）的存储数量 -->
	<name>dfs.replication</name>
	<!-- 小于或等于附属机数量。默认3 -->
	<value>2</value>
</property>
<property>
	<!-- 可以从网页端监控hdfs -->
	<name>dfs.webhdfs.enabled</name>
	<value>true</value>
</property>
</configuration>
